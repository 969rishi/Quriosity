        android:layout_height="wrap_content"
        android:background="@drawable/actor_other_radius"
        android:orientation="vertical">

        <TextView
            android:id="@+id/other_user_name1002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="11sp"
            android:paddingTop="@dimen/margin_small3"
            android:paddingStart="@dimen/margin_small5"
            android:paddingEnd="@dimen/margin_small1"
            android:textColor="@color/grey_60"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/actor_other_textview1002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:autoLink="web"
                android:paddingStart="@dimen/margin_small10"
                android:paddingTop="@dimen/margin_small3"
                android:paddingEnd="@dimen/margin_small1"
                android:paddingBottom="@dimen/padding_small8"
                android:text="ðŸš« This message is deleted"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size16"
                android:visibility="visible" />

            <TextView
                android:id="@+id/time_textview1002"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:paddingBottom="@dimen/margin_small3"
                android:text="55:55 am"
                android:textColor="@color/grey_60"
                android:textSize="11sp"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
