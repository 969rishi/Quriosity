<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_signup_activity_layout"
        layout="@layout/toolbar_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray" />


    <ProgressBar
        android:id="@+id/progress_bar_add_functions_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/whole_relativelayout_add_functions_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_tnt_eye_launcher_png" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_normal10"
            android:layout_marginEnd="@dimen/margin_normal10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal10"
                android:layout_marginBottom="@dimen/margin_normal30"
                android:text="Sign Up"
                android:textColor="@color/dark_gray"
                android:textSize="26sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userfirstname_signup_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small15"
                android:autofillHints="@null"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingBottom="@dimen/padding_small20" />

            <EditText
                android:id="@+id/email_signup_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small15"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/padding_small20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small15"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/countrycodeedittext"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:spinnerMode="dialog" />

                <TextView
                    android:id="@+id/countrycodes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.10"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:inputType="none"
                    android:maxLength="6"
                    android:paddingBottom="@dimen/padding_small10"
                    android:text="+91"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/input_co_nt_ac_t_n_o"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:digits="0123456789"
                    android:hint="Mobile"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingBottom="@dimen/padding_small20"
                    android:textColor="@color/black" />


            </LinearLayout>

            <EditText
                android:id="@+id/user_password_activity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small15"
                android:autofillHints="@null"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/padding_small20" />

            <EditText
                android:id="@+id/user_confirm_password_activity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@null"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/padding_small20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/submit_btn_activity_signup"
                style="@style/ButtonStyleFull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal10"
                android:text="@string/signup_terms"
                android:textAlignment="center"
                android:textSize="@dimen/text_size12" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>